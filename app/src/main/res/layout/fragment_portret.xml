<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/ivPortret"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp" />

        <TextView
            android:id="@+id/tvSlideNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ivPortret"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:text="sfdsdfsd"
            android:textColor="@color/screen_font"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvSlideNumber"
            android:text="wwwwwww qqqqqqqqq"
            android:textColor="@color/screen_font"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvBirthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvSlideNumber"
            android:layout_toRightOf="@+id/tvFullName"
            android:gravity="right"
            android:text="2000."
            android:textColor="@color/screen_font"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDefaultPozicija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvFullName"
            android:text="pozicija"
            android:textColor="@color/screen_font"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvFullName"
            android:gravity="right"
            android:text="190cm"
            android:textColor="@color/screen_font"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFullName"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tvHeight"
            android:gravity="right"
            android:text="88kg"
            android:textColor="@color/screen_font"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvNapomena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvDefaultPozicija"
            android:layout_marginTop="5dp"
            android:singleLine="false"
            android:textColor="@color/screen_font"
            android:textSize="14dp" />

    </RelativeLayout>
</ScrollView>