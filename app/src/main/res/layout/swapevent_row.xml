<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:background="@color/screen_background"
    android:padding="0dp">

    <TextView
        android:id="@+id/tvEventMinutSwap"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/screen_font"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvPlayerIn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tvEventMinutSwap"
        android:gravity="right"
        android:paddingRight="5dp"
        android:textColor="@color/complementlght"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivFirstIconSwap"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tvPlayerIn"
        android:src="@drawable/swap30x30" />

    <TextView
        android:id="@+id/tvPlayerOut"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ivFirstIconSwap"
        android:textColor="@color/baselight"
        android:textSize="12sp" />


</RelativeLayout>
