<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:background="@color/screen_background"
    android:padding="0dp">

    <TextView
        android:id="@+id/tvaEventMinut"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/screen_font"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/ivaSecondIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tvaEventMinut" />

    <TextView
        android:id="@+id/tvaPlayer"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/screen_font"
        android:textSize="12dp" />


    <ImageView
        android:id="@+id/ivaFirstIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toLeftOf="@id/tvaPlayer"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tvaScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/ivaFirstIcon"
        android:gravity="clip_horizontal"
        android:textColor="@color/complementlght"
        android:textSize="12dp" />


</RelativeLayout>
