<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivFrontImage"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fkdedinjebgd" />

    <LinearLayout
        android:id="@+id/ll_navFirstLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ivFrontImage">

        <Button
            android:id="@+id/btnHomeAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/baseclr"
            android:text="@string/btn_home"
            android:textAllCaps="false"
            android:textColor="@color/complementlght" />

        <Button
            android:id="@+id/btnManagement"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/baseclr"
            android:text="@string/btn_management"
            android:textAllCaps="false"
            android:textColor="@color/complementlght" />

        <Button
            android:id="@+id/btnSquad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/baseclr"
            android:text="@string/btn_squad"
            android:textAllCaps="false"
            android:textColor="@color/complementlght" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_navSecondLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_navFirstLine">

        <Button
            android:id="@+id/btnFixtures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/baseclr"
            android:text="@string/btn_fixtures"
            android:textAllCaps="false"
            android:textColor="@color/complementlght" />

        <Button
            android:id="@+id/btnStandings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/baseclr"
            android:text="@string/btn_standings"
            android:textAllCaps="false"
            android:textColor="@color/complementlght" />

        <Button
            android:id="@+id/btnLivescore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/baseclr"
            android:text="@string/btn_livescore"
            android:textAllCaps="false"
            android:textColor="@color/complementlght" />
    </LinearLayout>

    <Switch
        android:id="@+id/swSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:checked="false"
        android:text="@string/prompt_sound"
                android:textOff="-"
        android:textOn="+"
        android:switchMinWidth="86dp"
        android:thumb="@drawable/thumb"
        android:track="@drawable/track"

        />


</RelativeLayout>
